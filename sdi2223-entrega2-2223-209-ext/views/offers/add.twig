{% extends "layout.twig" %}
{% block title %} Agregar Oferta {% endblock %}
{% block main_container %}
    <h2>Agregar Oferta</h2>

    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error.msg }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form class="form-horizontal" method="post" action="/offers/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="title">Título:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" placeholder="Titulo de la oferta" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="detail">Detalles:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="detail" name="detail" placeholder="Detalle de la oferta" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="price">Precio (€):</label>
            <div class="col-sm-10">
                <input type="number" step="0.01" id="price" class="form-control" name="price"
                       placeholder="2.50" required/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="price">Destacar:</label>
            <div class="col-sm-10">
                <input type="checkbox" id="highlight" class="form-control" name="highlight"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar Oferta</button>
            </div>
        </div>
    </form>
{% endblock %}
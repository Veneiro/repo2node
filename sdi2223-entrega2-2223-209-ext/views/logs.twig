{% extends "layout.twig" %}
{% block title %} Logs del sistema {% endblock %}
{% block main_container %}

<h2>Logs</h2>
<form action="/logs/delete" method="post">
    <button type="submit" class="btn btn-danger">Borrar</button>
</form>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Tipo de log</th>
            <th>Fecha</th>
            <th>Descripci√≥n</th>
        </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.logType }}</td>
                <td>{{ log.date }}</td>
                <td>{{ log.message }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}